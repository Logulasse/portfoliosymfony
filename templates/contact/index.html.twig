{% extends 'home/menu.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-10">
                <h1>Contact</h1>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="mb-3">
                <label for="contactLastName" class="form-label">Nom : </label>
                <input id="contactLastName" class="form-control" type="text" aria-label="lastname">
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label for="contactFirstName" class="form-label">Pr√©nom : </label>
                <input id="contactFirstName" class="form-control" type="text" aria-label="firstname">
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label for="contactEmail" class="form-label">Email : </label>
                <input id="contactEmail" class="form-control" type="email" aria-label="email" placeholder="name@example.com">
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label for="contactText" class="form-label">Votre texte : </label>
                <textarea id="contactText" class="form-control" rows="8"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-10">
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-light">
                    Envoyer
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
